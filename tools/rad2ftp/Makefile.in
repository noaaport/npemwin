@include@ @q@../../Makefile.inc@q@

INSTALL =	@INSTALL@
SHELL =		@SHELL@

SAMPLES =	rad2ftp.conf-sample rad2ftp-slist.conf-sample
LIBTOOLS =	rad2ftp
TARGET =	${LIBTOOLS} ${SAMPLES}

RAD2FTPCONFDIR = ${MYCONFDIR}

all: ${TARGET}

rad2ftp: rad2ftp.sh.in
	sed -e "/%SHELL%/s##${SHELL}#" \
	-e "/%RAD2FTPCONFDIR%/s##${RAD2FTPCONFDIR}#" \
	rad2ftp.sh.in > rad2ftp

rad2ftp.conf-sample: rad2ftp.conf.in
	sed -e "/%RAD2FTPCONFDIR%/s##${RAD2FTPCONFDIR}#" \
	rad2ftp.conf.in > rad2ftp.conf-sample

rad2ftp-slist.conf-sample: rad2ftp-slist.conf
	 cp rad2ftp-slist.conf rad2ftp-slist.conf-sample

install:
	${INSTALL} -m 0644 ${SAMPLES} ${MYCONFDIR}
	${INSTALL} -m 0755 ${LIBTOOLS} ${MYLIBEXECDIR}

clean:
	rm -f *~ ${TARGET} Makefile
