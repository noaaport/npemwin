@include@ @q@Makefile.inc@q@

DIRS = conf doc filters scripts src tclhttpd tclmetar

all: 
	for dir in ${DIRS}; do \
	(cd $$dir; ${MAKE}) \
	done

install:
	for dir in ${DIRS}; do \
	(cd $$dir; ${MAKE} install) \
	done

clean:
	for dir in ${DIRS}; do \
	(cd $$dir; ${MAKE} clean) \
	done
	rm -f *~ Makefile Makefile.inc
